<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.braintrainer.TimerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="30S"
        android:id="@+id/timerTextview"
        android:layout_alignParentStart="true"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1 + 1"
        android:id="@+id/somTextView"
        android:layout_alignTop="@+id/timerTextview"
        android:layout_centerHorizontal="true"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0/0"
        android:id="@+id/scoreTextview"
        android:layout_alignTop="@+id/somTextView"
        android:layout_alignParentEnd="true"
        android:background="#fb0101"
        android:textSize="30sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp"
        android:orientation="horizontal"
        android:id="@+id/gridLayout">
        <Button
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:text="1"
            android:id="@+id/button1"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="checkUitkomst"
            android:textSize="40dp"
            android:background="#dfbb1c"
            android:textStyle="bold|italic" />

        <Button
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:text="2"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="checkUitkomst"
            android:textSize="40dp"
            android:background="#198b10"
            android:layout_marginRight="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:text="3"
            android:id="@+id/button3"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="checkUitkomst"
            android:textSize="40dp"
            android:background="#e204fb"
            android:textStyle="bold|italic" />
        <Button
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:text="4"
            android:id="@+id/button4"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="checkUitkomst"
            android:textSize="40dp"
            android:background="#0953af"
            android:textStyle="bold|italic" />













    </GridLayout>


</RelativeLayout>
